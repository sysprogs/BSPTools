<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Name>STM32L1</Name>
	<DeviceRegex>^STM32L1.*</DeviceRegex>
	<FamilySubdirectory>STM32L1xxxx</FamilySubdirectory>
	<PrimaryHeaderDir>$$STM32:L1_DIR$$\Drivers\CMSIS\Device\ST\STM32L1xx\Include</PrimaryHeaderDir>
	<StartupFileDir>$$STM32:L1_DIR$$\Drivers\CMSIS\Device\ST\STM32L1xx\Source\Templates\gcc</StartupFileDir>
	<Subfamilies>
		<MCUClassifier>
			<VariableName>com.sysprogs.stm32.legacy_device_family</VariableName>
			<Required>false</Required>
			<Options>
				<Option>
					<Value>STM32L1XX_MD</Value>
					<Regex>STM32L1...[68B]($|-A)</Regex>
				</Option>
				<Option>
					<Value>STM32L1XX_MDP</Value>
					<Regex>STM32L1...C($|-A)</Regex>
				</Option>
				<Option>
					<Value>STM32L1XX_HD</Value>
					<Regex>STM32L1...D($|-X)</Regex>
				</Option>
				<Option>
					<Value>STM32L1XX_XL</Value>
					<Regex>STM32L1...E$</Regex>
				</Option>
			</Options>
		</MCUClassifier>
	</Subfamilies>
	<CompilationFlags>
<PreprocessorMacros>
		<string>$$com.sysprogs.bspoptions.primary_memory$$_layout</string>		
	</PreprocessorMacros>
			<IncludeDirectories>
			<string>.</string>
		</IncludeDirectories>
	</CompilationFlags>
	<CoreFramework>
		<CopyJobs>
		</CopyJobs>
	</CoreFramework>
	<AdditionalFrameworks>
		<Framework>
			<Name>STM32L1 Legacy Peripheral Library</Name>
			<ID>com.sysprogs.arm.stm32.l1_stdperiph</ID>
			<ClassID>com.sysprogs.arm.stm32.stdperiph</ClassID>
			<IncompatibleFrameworks>
				<string>com.sysprogs.arm.stm32.l1_hal</string>
			</IncompatibleFrameworks>
			<ProjectFolderName>StdPeriph</ProjectFolderName>
			<DefaultEnabled>false</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\Legacy\STM32L1xx_StdPeriph_Lib_V1.3.1\Libraries\STM32L1xx_StdPeriph_Driver</SourceFolder>
					<FilesToCopy>*.c;*.h</FilesToCopy>
				</CopyJob>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\Legacy\STM32L1xx_StdPeriph_Lib_V1.3.1\Libraries\CMSIS</SourceFolder>
					<TargetFolder>CMSIS_StdPeriph</TargetFolder>
					<FilesToCopy>-DSP_Lib\*;*.h;*.c</FilesToCopy>
					<PreprocessorMacros>$$com.sysprogs.stm32.legacy_device_family$$</PreprocessorMacros>
					<ProjectInclusionMask>-*Include\stm32l1????.h*;-*system_*.c;*</ProjectInclusionMask>
					<Patches>
						<Patch xsi:type="InsertLines">
							<FilePath>Device\ST\STM32L1xx\Include\stm32l1xx.h</FilePath>
							<AfterLine>#define __STM32L1XX_H</AfterLine>
							<InsertedLines>
								<string></string>
								<string>#define assert_param(expr)</string>
							</InsertedLines>
						</Patch>
					</Patches>
				</CopyJob>
			</CopyJobs>			
		</Framework>
	</AdditionalFrameworks>
	<SmartSamples>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\samples\LEDBlink_STM32L1X</SourceFolder>
			<DestinationFolder>samples\LEDBlink_STM32L1X</DestinationFolder>
			<AdditionalSources>
				<string>$$SYS:BSP_ROOT$$/STM32L1xxxx/CMSIS_StdPeriph/Device/ST/STM32L1xx/Source/Templates/system_stm32l1xx.c</string>
			</AdditionalSources>
		</SmartSample>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\samples\USB_CDC_STM32L1X</SourceFolder>
			<DestinationFolder>samples\USB_CDC_STM32L1X</DestinationFolder>
			<AdditionalSources>
				<string>$$SYS:BSP_ROOT$$/$$com.sysprogs.bspoptions.stm32.hal_system_file$$</string>
				<string>$$SYS:BSP_ROOT$$/$$com.sysprogs.bspoptions.stm32.hal_config_template_file$$=>$$com.sysprogs.stm32.hal_header_prefix$$_hal_conf.h</string>
			</AdditionalSources>
		</SmartSample>
	</SmartSamples>
      <AdditionalSystemVars>
        <SysVarEntry>
          <Key>com.sysprogs.stm32.hal_header_prefix</Key>
          <Value>stm32l1xx</Value>
        </SysVarEntry>
        <SysVarEntry>
          <Key>com.sysprogs.bspoptions.stm32.hal_system_file</Key>
          <Value>STM32L1xxxx/CMSIS_HAL/Device/ST/STM32L1xx/Source/Templates/system_stm32l1xx.c</Value>
        </SysVarEntry>
        <SysVarEntry>
          <Key>com.sysprogs.bspoptions.stm32.hal_config_template_file</Key>
          <Value>STM32L1xxxx/STM32L1xx_HAL_Driver/Inc/stm32l1xx_hal_conf_template.h</Value>
        </SysVarEntry>
      </AdditionalSystemVars>
</FamilyDefinition>
