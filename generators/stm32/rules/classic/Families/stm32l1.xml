        <SysVarEntry>
          <Key>com.sysprogs.bspoptions.stm32.hal_system_file</Key>
          <Value>STM32L1xxxx/CMSIS_HAL/Device/ST/STM32L1xx/Source/Templates/system_stm32l1xx.c</Value>
