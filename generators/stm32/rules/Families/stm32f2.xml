<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Name>STM32F2</Name>
	<DeviceRegex>^STM32F2.*</DeviceRegex>
	<FamilySubdirectory>STM32F2xxxx</FamilySubdirectory>
	<PrimaryHeaderDir>$$BSPGEN:INPUT_DIR$$\STM32Cube_FW_F2_V1.4.0\Drivers\CMSIS\Device\ST\STM32F2xx\Include</PrimaryHeaderDir>
	<StartupFileDir>$$BSPGEN:INPUT_DIR$$\STM32Cube_FW_F2_V1.4.0\Drivers\CMSIS\Device\ST\STM32F2xx\Source\Templates\gcc</StartupFileDir>
	<Subfamilies>
		<MCUClassifier>
			<VariableName>com.sysprogs.stm32.hal_device_family</VariableName>
			<Required>true</Required>
			<IsPrimary>true</IsPrimary>
			<UnsupportedMCUs></UnsupportedMCUs>
			<AutoOptions>STM32F205xx;STM32F215xx;STM32F207xx;STM32F217xx</AutoOptions>
			<Options/>
		</MCUClassifier>
	</Subfamilies>
	<CompilationFlags>
		<IncludeDirectories>
			<string>.</string>
		</IncludeDirectories>
	</CompilationFlags>
	<CoreFramework>
		<CopyJobs>
		</CopyJobs>
	</CoreFramework>
	<AdditionalFrameworks>
		<Framework>
			<Name>STM32F2Cube HAL</Name>
			<ID>com.sysprogs.arm.stm32.f2_hal</ID>
			<ClassID>com.sysprogs.arm.stm32.hal</ClassID>
			<IncompatibleFrameworks>
				<string>com.sysprogs.arm.stm32.f2_stdperiph</string>
			</IncompatibleFrameworks>
			<ProjectFolderName>HAL</ProjectFolderName>
			<DefaultEnabled>true</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM32Cube_FW_F2_V1.4.0\Drivers\STM32F2xx_HAL_Driver</SourceFolder>
					<FilesToCopy>*.c;*.h</FilesToCopy>
					<ProjectInclusionMask>-*_template.?;*</ProjectInclusionMask>
				</CopyJob>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM32Cube_FW_F2_V1.4.0\Drivers\CMSIS</SourceFolder>
					<FilesToCopy>-DSP_Lib\*;*.h;*.c</FilesToCopy>
					<TargetFolder>CMSIS_HAL</TargetFolder>
					<PreprocessorMacros>stm32_$$com.sysprogs.bspoptions.primary_memory$$_layout;$$com.sysprogs.stm32.hal_device_family$$</PreprocessorMacros>
					<PreprocessorMacros>stm32_$$com.sysprogs.bspoptions.primary_memory$$_layout;$$com.sysprogs.stm32.hal_device_family$$;$$com.sysprogs.bspoptions.stm32.hal_legacy$$</PreprocessorMacros>
					<ProjectInclusionMask>-*Include\stm32f2????.h*;-*system_*.c;*</ProjectInclusionMask>
					<AutoIncludeMask>-RTOS\Template\*;*.h</AutoIncludeMask>					
					<Patches>
						<Patch xsi:type="InsertLines">
							<FilePath>Device\ST\STM32f2xx\Source\Templates\system_stm32f2xx.c</FilePath>
							<AfterLine>#include "stm32f2xx.h"</AfterLine>
							<InsertedLines>
								<string>#include &lt;stm32f2xx_hal.h&gt;</string>
							</InsertedLines>

						</Patch>					
					</Patches>
				</CopyJob>
			</CopyJobs>			
		</Framework>
		<Framework>
			<Name>STM32F2 Default System Init File</Name>
			<ID>com.sysprogs.arm.stm32.f2_systeminit</ID>
			<ClassID>com.sysprogs.arm.stm32.hal_systeminit</ClassID>
			<RequiredFrameworks>
				<string>com.sysprogs.arm.stm32.f2_hal</string>
			</RequiredFrameworks>
			<ProjectFolderName>SystemInit</ProjectFolderName>
			<DefaultEnabled>true</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<AlreadyCopied>true</AlreadyCopied>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM32Cube_FW_F2_V1.4.0\Drivers\CMSIS</SourceFolder>
					<TargetFolder>CMSIS_HAL</TargetFolder>
					<FilesToCopy>*system_stm*.c</FilesToCopy>
				</CopyJob>
			</CopyJobs>			
		</Framework>
		<Framework>
			<Name>STM32F2 Legacy Peripheral Library</Name>
			<ID>com.sysprogs.arm.stm32.f2_stdperiph</ID>
			<IncompatibleFrameworks>
				<string>com.sysprogs.arm.stm32.f2_hal</string>
			</IncompatibleFrameworks>
			<ProjectFolderName>StdPeriph</ProjectFolderName>
			<DefaultEnabled>false</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM32F2xx_StdPeriph_Lib_V1.1.0\Libraries\STM32F2xx_StdPeriph_Driver</SourceFolder>
					<FilesToCopy>*.c;*.h</FilesToCopy>
				</CopyJob>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\STM32F2xx_StdPeriph_Lib_V1.1.0\Libraries\CMSIS</SourceFolder>
					<TargetFolder>CMSIS_StdPeriph</TargetFolder>
					<FilesToCopy>-DSP_Lib\*;*.h;*.c</FilesToCopy>
					<PreprocessorMacros>stm32_$$com.sysprogs.bspoptions.primary_memory$$_layout</PreprocessorMacros>
					<ProjectInclusionMask>-*Include\stm32f2????.h*;-*system_*.c;*</ProjectInclusionMask>
					<Patches>
						<Patch xsi:type="InsertLines">
							<FilePath>Device\ST\STM32F2xx\Include\stm32f2xx.h</FilePath>
							<AfterLine>#define __STM32F2xx_H</AfterLine>
							<InsertedLines>
								<string></string>
								<string>#ifndef assert_param</string>
								<string>#define assert_param(expr)</string>
								<string>#endif</string>
							</InsertedLines>
						</Patch>
					</Patches>					
				</CopyJob>
			</CopyJobs>			
		</Framework>
	</AdditionalFrameworks>
	<SmartSamples>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\samples\LEDBlink_STM32F2X</SourceFolder>
			<DestinationFolder>samples\LEDBlink_STM32F2X</DestinationFolder>
			<AdditionalSources>
				<string>$$SYS:BSP_ROOT$$/STM32F2xxxx/CMSIS_StdPeriph/Device/ST/STM32F2xx/Source/Templates/system_stm32f2xx.c</string>
			</AdditionalSources>
		</SmartSample>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\samples\USB_CDC_STM32F2X</SourceFolder>
			<DestinationFolder>samples\USB_CDC_STM32F2X</DestinationFolder>
			<AdditionalSources>
				<string>$$SYS:BSP_ROOT$$/$$com.sysprogs.bspoptions.stm32.hal_system_file$$</string>
				<string>$$SYS:BSP_ROOT$$/$$com.sysprogs.bspoptions.stm32.hal_config_template_file$$=>$$com.sysprogs.stm32.hal_header_prefix$$_hal_conf.h</string>
			</AdditionalSources>
		</SmartSample>
	</SmartSamples>
      <AdditionalSystemVars>
        <SysVarEntry>
          <Key>com.sysprogs.stm32.hal_header_prefix</Key>
          <Value>stm32f2xx</Value>
        </SysVarEntry>
        <SysVarEntry>
          <Key>com.sysprogs.bspoptions.stm32.hal_system_file</Key>
          <Value>STM32F2xxxx/CMSIS_HAL/Device/ST/STM32F2xx/Source/Templates/system_stm32f2xx.c</Value>
        </SysVarEntry>
        <SysVarEntry>	
          <Key>com.sysprogs.bspoptions.stm32.hal_config_template_file</Key>
          <Value>STM32F2xxxx/STM32F2xx_HAL_Driver/Inc/stm32f2xx_hal_conf_template.h</Value>
        </SysVarEntry>
      </AdditionalSystemVars>
</FamilyDefinition>
