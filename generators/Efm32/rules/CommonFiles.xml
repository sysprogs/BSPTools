<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<CoreFramework>
		<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\platform\CMSIS\Core\Include</SourceFolder>
					<FilesToCopy>*.h;*.c</FilesToCopy>
					<TargetFolder>CMSIS</TargetFolder>
					<AutoIncludeMask>*.h</AutoIncludeMask>	
				</CopyJob>				
		</CopyJobs>
	</CoreFramework>
	<AdditionalFrameworks>
		<Framework>
			<Name>Common EFM32 Files</Name>
			<ID>com.sysprogs.arm.silabs.efm32.common</ID>
			<IncompatibleFrameworks>
			</IncompatibleFrameworks>
			<ProjectFolderName>Common</ProjectFolderName>
			<DefaultEnabled>false</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\platform\common</SourceFolder>
					<FilesToCopy>*.h;*.c</FilesToCopy>
					<TargetFolder>framework\common</TargetFolder>
					<ProjectInclusionMask>-*os2_ext_task_register*;-*sl_stdio.c;-toolchain\*;*</ProjectInclusionMask>
				</CopyJob>		
			</CopyJobs>
		</Framework>
		<Framework>
			<Name>EFM32 EMLib</Name>
			<ID>com.sysprogs.arm.silabs.efm32.emlib</ID>
			<RequiredFrameworks>
				<string>com.sysprogs.arm.silabs.efm32.common</string>
			</RequiredFrameworks>
			<ProjectFolderName>Emlib</ProjectFolderName>
			<DefaultEnabled>false</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\platform\emlib</SourceFolder>
					<FilesToCopy>-host\*;*.h;*.c</FilesToCopy>
					<TargetFolder>framework\emlib</TargetFolder>
				</CopyJob>		
			</CopyJobs>
		</Framework>
		<Framework>
			<Name>EFM32 USB Library</Name>
			<ID>com.sysprogs.arm.silabs.efm32.usb</ID>
			<IncompatibleFrameworks>
			</IncompatibleFrameworks>
			<ProjectFolderName>Usb</ProjectFolderName>
			<DefaultEnabled>false</DefaultEnabled>
			<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\platform\middleware\usb_gecko</SourceFolder>
					<FilesToCopy>*.h;*.c</FilesToCopy>
					<TargetFolder>framework\usb</TargetFolder>
				</CopyJob>		
			</CopyJobs>
		</Framework>
	</AdditionalFrameworks>
	<SmartSamples>
		<SmartSample>
			<SourceFolder>$$BSPGEN:RULES_DIR$$\Samples\LEDBlink</SourceFolder>
			<DestinationFolder>Samples\LEDBlink</DestinationFolder>
		</SmartSample>
	</SmartSamples>
</FamilyDefinition>
